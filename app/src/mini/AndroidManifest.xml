<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.jandrotek.android.aspectra.main" >

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />


    <!-- for using app only as AspectraMini we need camera, no BT-->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.screen.landscape"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        >
        <activity
            android:name="de.jandrotek.android.aspectra.main.LiveViewActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.jandrotek.android.aspectra.main.ViewConfigActivity"
            android:label="@string/title_activity_view_config" >
        </activity>
        <activity
            android:name="de.jandrotek.android.aspectra.main.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name=".ItemListActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".ItemDetailActivity"
            android:label="@string/title_item_detail"
            android:parentActivityName=".ItemListActivity" >
            <!--<meta-data-->
                <!--android:name="android.support.PARENT_ACTIVITY"-->
                <!--android:value="de.jandrotek.android.aspectra.main.ItemListActivity" />-->
        </activity>
        <!-- not as separate activity
                 <activity
                     android:name="de.jandrotek.android.aspectra.mini.BaseActivity"
                     android:label="@string/title_activity_base" >
                 </activity>
                 -->
    </application>

</manifest>
