<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:rowCount="6"
    android:orientation="vertical"
    tools:context="de.jandrotek.android.aspectra.plottest.MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Move"
        android:ems="10"
        android:layout_column="1"
        android:layout_row="0"
        android:id="@+id/editText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:text="move right 10"
        android:layout_column="1"
        android:layout_row="1"
        android:id="@+id/buttonMoveRight"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="move left 10"
        android:id="@+id/buttonMoveLeft"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Squeeze"
        android:ems="10"
        android:layout_column="1"
        android:layout_row="2"
        android:id="@+id/editText" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="squeeze 0.5"
        android:id="@+id/buttonSqueeze"
        android:layout_column="0"
        android:layout_row="3"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stretch right 2.0"
        android:id="@+id/buttonStretch"
        android:layout_column="1"
        android:layout_row="3"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Run"
        android:ems="10"
        android:layout_column="1"
        android:layout_row="4"
        android:id="@+id/editText" />
    <Button
        android:text="Single"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_single"
        android:layout_column="0"
        android:layout_row="5"

        android:layout_marginBottom="128dp"
        />


    <Button
        android:text="Auto"
        android:layout_column="1"
        android:layout_row="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_auto"
        />


</GridLayout>